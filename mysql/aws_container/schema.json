{
  "type": "object",
  "title": "Container provisioning configuration",
  "properties": {
    "username": {
      "description": "username to connect to mysql",
      "type": "string"
    },
    "password": {
      "description": "password to connect to mysql",
      "type": "string"
    },    
    "imageRegistry": {
      "description": "The image registry from which the docker image needs to be pulled",
      "type": "string"
    },
    "imageRepository": {
      "description": "The image repository from which the docker image needs to be pulled",
      "type": "string"
    },
    "imageTag": {
      "description": "The image tag for mysql docker image",
      "type": "string"
    },    
    "storageClass": {
      "description": "MySQL persistent volume storage class",
      "type": "string"
    },
    "writer": {
      "type": "object",
      "properties": {
        "resources": {
          "type": "object",
          "properties": {
            "limits": {
              "description": "The resources limits for MySQL writer containers",
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string"
                },
                "memory": {
                  "type": "string"
                },
                "ephemeralStorage": {
                  "type": "string"
                }
              },
              "required": [
                "cpu",
                "memory",
                "ephemeralStorage"
              ]
            },
            "requests": {
              "description": "The resources requests for MySQL writer containers",
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string"
                },
                "memory": {
                  "type": "string"
                },
                "ephemeralStorage": {
                  "type": "string"
                }
              },
              "required": [
                "cpu",
                "memory",
                "ephemeralStorage"
              ]
            }
          },
          "required": [
            "limits",
            "requests"
          ]
        },
        "tolerations": {
          "description": "Tolerations for MySQL writer pods",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "key": {
                "type": "string"
              },
              "operator": {
                "type": "string",
                "enum": ["Equal", "Exists"]
              },
              "value": {
                "type": "string"
              },
              "effect": {
                "type": "string",
                "enum": ["NoSchedule", "PreferNoSchedule", "NoExecute"]
              },
              "tolerationSeconds": {
                "type": "integer"
              }
            },
            "required": ["key", "operator"]
          }
        },
        "nodeSelector": {
          "description": "Node labels for MySQL writer pods assignment",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "persistence": {
          "type": "object",
          "properties": {
            "size": {
              "description": "Size of the persistent volume for MySQL writer",
              "type": "string"
            }
          },
          "required": ["size"]
        }
      },
      "required": [
        "resources"
      ]
    },
    "reader": {
      "type": "object",
      "properties": {
        "resources": {
          "$ref": "#/properties/writer/properties/resources"
        },
        "tolerations": {
          "$ref": "#/properties/writer/properties/tolerations"
        },
        "nodeSelector": {
          "$ref": "#/properties/writer/properties/nodeSelector"
        },
        "persistence": {
          "$ref": "#/properties/writer/properties/persistence"
        },
        "replicaCount": {
          "description": "Number of MySQL reader replicas",
          "type": "integer",
          "minimum": 0,
          "default": 0
        }
      },
      "required": [
        "resources"
      ]
    },
  "binlog": {
    "description": "MySQL binary logging configuration",
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean",
        "default": false,
        "description": "Enable or disable MySQL binary logging"
      },
      "configuration": {
        "type": "object",
        "description": "Additional binlog configuration parameters",
        "additionalProperties": true
      }
    },
    "required": ["enabled"]
  }    
  },

  "required": [
    "imageRegistry",
    "imageRepository",
    "imageTag",
    "storageClass",
    "writer",
    "reader"
  ]
}
